// ADR-029: Test callback assignment
struct Message {
    u32 id;
}

void onReceive(const Message msg) {
    // default: no-op
}

// User's custom handler (same signature, not used as a type)
void myHandler(const Message msg) {
    // custom implementation
}

struct Controller {
    onReceive _handler;
}

void test() {
    Controller c;
    c._handler <- myHandler;
}
