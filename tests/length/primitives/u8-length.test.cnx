// test-execution
// Comprehensive .length test for u8 type across all contexts
// Tests: .length returns 8 for u8 in every possible scope and access pattern
// Context 1: Global variable
u8 globalVar <- 42;

// Context 2: Global accessed from inside scope
scope TestScope {
    public u32 getGlobalLength() {
        return global.globalVar.length;
    }
    // Context 3: Scope member
    u8 scopeMember <- 42;
    public u32 getMemberLength() {
        return this.scopeMember.length;
    }
    // Context 4: Public scope member (cross-scope access)
    public u8 publicMember <- 42;
}

// Context 6: Function parameter
u32 checkParamLength(u8 param) {
    return param.length;
}

// Context 7: Struct member
struct TestStruct {
    u8 member;
}

i32 main() {
   
// Test Context 1: Global variable
    if (globalVar.length != 8) {
        return 1;
    }


// Test Context 2: Global from inside scope
    u32 result <- TestScope.getGlobalLength();
    if (result != 8) {
        return 2;
    }


// Test Context 3: Scope member with this.
    result <- TestScope.getMemberLength();
    if (result != 8) {
        return 3;
    }

   
// Test Context 4: Cross-scope access
    if (TestScope.publicMember.length != 8) {
        return 4;
    }

   
// Test Context 5: Local variable
    u8 localVar <- 42;
    if (localVar.length != 8) {
        return 5;
    }

   
// Test Context 6: Function parameter
    u8 testVal <- 42;
    result <- checkParamLength(testVal);
    if (result != 8) {
        return 6;
    }

   
// Test Context 7: Struct member
    TestStruct ts;
    ts.member <- 42;
    if (ts.member.length != 8) {
        return 7;
    }

   
// Test Context 8: Array element
    u8 arr[4];
    arr[0] <- 42;
    if (arr[0].length != 8) {
        return 8;
    }

    return 0;
}
