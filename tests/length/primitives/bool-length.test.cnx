// test-execution
// Comprehensive .length test for bool type across all contexts
// Tests: .length returns 8 for bool in every possible scope and access pattern
// Note: bool storage is 1 byte (8 bits), not 1 bit
bool globalVar <- true;

scope TestScope {
    public u32 getGlobalLength() {
        return global.globalVar.length;
    }
    bool scopeMember <- true;
    public u32 getMemberLength() {
        return this.scopeMember.length;
    }
    public bool publicMember <- true;
}

u32 checkParamLength(bool param) {
    return param.length;
}

struct TestStruct {
    bool member;
}

i32 main() {
    if (globalVar.length != 8) {
        return 1;
    }

    u32 result <- TestScope.getGlobalLength();
    if (result != 8) {
        return 2;
    }

    result <- TestScope.getMemberLength();
    if (result != 8) {
        return 3;
    }

    if (TestScope.publicMember.length != 8) {
        return 4;
    }

    bool localVar <- true;
    if (localVar.length != 8) {
        return 5;
    }

    bool testVal <- true;
    result <- checkParamLength(testVal);
    if (result != 8) {
        return 6;
    }

    TestStruct ts;
    ts.member <- true;
    if (ts.member.length != 8) {
        return 7;
    }

    bool[4] arr;
    arr[0] <- true;
    if (arr[0].length != 8) {
        return 8;
    }

    return 0;
}
