/* test-execution */
// Tests: continue statement in while loop
// Validates: skipping iterations with continue in while loops

u32 main() {
    // Test 1: Skip even numbers, sum odd numbers
    u32 oddSum <- 0;
    u32 i <- 0;
    while (i < 10) {
        u32 current <- i;
        i +<- 1;  // Increment BEFORE continue to avoid infinite loop
        if (current % 2 = 0) {
            continue;
        }
        oddSum +<- current;
    }
    // oddSum = 1 + 3 + 5 + 7 + 9 = 25
    if (oddSum != 25) return 1;

    // Test 2: Skip specific value
    u32 sumExcept5 <- 0;
    u32 j <- 0;
    while (j < 10) {
        u32 curr <- j;
        j +<- 1;
        if (curr = 5) {
            continue;
        }
        sumExcept5 +<- curr;
    }
    // sum = 0+1+2+3+4+6+7+8+9 = 40
    if (sumExcept5 != 40) return 2;

    // Test 3: Continue with flag tracking
    u32 skipped <- 0;
    u32 processed <- 0;
    u32 k <- 0;
    while (k < 10) {
        u32 val <- k;
        k +<- 1;
        if (val % 3 = 0) {
            skipped +<- 1;
            continue;
        }
        processed +<- 1;
    }
    // Multiples of 3 in 0-9: 0,3,6,9 = 4 skipped
    if (skipped != 4) return 3;
    // Non-multiples: 1,2,4,5,7,8 = 6 processed
    if (processed != 6) return 4;

    // Test 4: Continue with accumulation before and after
    u32 beforeSum <- 0;
    u32 afterSum <- 0;
    u32 m <- 0;
    while (m < 5) {
        beforeSum +<- m;  // Always runs
        u32 temp <- m;
        m +<- 1;
        if (temp % 2 = 0) {
            continue;
        }
        afterSum +<- temp;  // Only odd numbers
    }
    // beforeSum = 0+1+2+3+4 = 10
    if (beforeSum != 10) return 5;
    // afterSum = 1+3 = 4
    if (afterSum != 4) return 6;

    // Test 5: Nested if with continue
    u32 nestedSum <- 0;
    u32 n <- 0;
    while (n < 20) {
        u32 v <- n;
        n +<- 1;
        if (v > 5) {
            if (v < 15) {
                continue;  // Skip 6-14
            }
        }
        nestedSum +<- v;
    }
    // Sum 0-5 and 15-19: 0+1+2+3+4+5+15+16+17+18+19 = 100
    if (nestedSum != 100) return 7;

    return 0;
}
