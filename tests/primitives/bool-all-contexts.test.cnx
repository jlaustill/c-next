/* test-execution */ // Tests: Boolean type in all language contexts
// Covers: function params, return types, struct members, arrays
// 1. Global variables
bool globalTrue <- true;

bool globalFalse <- false;

// 2. Struct with bool members
struct Flags {
    bool enabled;
    bool active;
}

// 3. Bool arrays
bool flagArray[4];

// 4. Function with bool param and return
bool negate(bool value) {
    return !value;
}

bool identity(bool value) {
    return value;
}

// 5. Main with validations (unique error codes)
u32 main() {
    // Test global variables
    if (globalTrue != true) return 1;
    if (globalFalse != false) return 2;

    // Test local variables (needed for function param tests)
    bool localTrue <- true;
    bool localFalse <- false;

    // Test function param + return (pass variables, not literals)
    if (negate(localTrue) != false) return 3;
    if (negate(localFalse) != true) return 4;
    if (identity(localTrue) != true) return 5;

    // Test local variables
    bool localBool <- true;
    if (localBool != true) return 6;

    // Test struct members
    Flags flags;
    flags.enabled <- true;
    flags.active <- false;
    if (flags.enabled != true) return 7;
    if (flags.active != false) return 8;

    // Test arrays
    flagArray[0] <- true;
    flagArray[1] <- false;
    if (flagArray[0] != true) return 9;
    if (flagArray[1] != false) return 10;

    // Test bool in expressions
    bool combined <- globalTrue && localBool;
    if (combined != true) return 11;

    bool orResult <- globalFalse || localBool;
    if (orResult != true) return 12;

    return 0;
}
