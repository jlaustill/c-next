// test-execution
// ADR-013: Const i64 variable
// Tests: const i64 declaration and read access with negative values
const i64 MIN_TIMESTAMP <- -2147483648;

const i64 MAX_TIMESTAMP <- 2147483647;

const i64 EPOCH <- 0;

u32 main() {
   
// Test 1: Read negative const into local variable
    i64 minTs <- MIN_TIMESTAMP;
    if (minTs != -2147483648) return 1;

   
// Test 2: Read positive const
    i64 maxTs <- MAX_TIMESTAMP;
    if (maxTs != 2147483647) return 2;

   
// Test 3: Read zero const
    i64 epoch <- EPOCH;
    if (epoch != 0) return 3;

   
// Test 4: Use const in arithmetic (range calculation)
    i64 range <- MAX_TIMESTAMP - MIN_TIMESTAMP;
    if (range != 4294967295) return 4;

   
// Test 5: Use negative const in comparison
    if (MIN_TIMESTAMP >= EPOCH) return 5;

   
// Test 6: Use const in conditional
    i64 timestamp <- 1000000;
    if (timestamp < MIN_TIMESTAMP) return 6;
    if (timestamp > MAX_TIMESTAMP) return 7;

    return 0;
}
