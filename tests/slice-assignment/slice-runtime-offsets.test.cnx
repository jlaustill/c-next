// test-error
// Tests: Issue #234 - Runtime slice offsets are compile-time errors
// Slice assignment requires compile-time constant offset and length
// to ensure bounds safety. Runtime offsets/lengths are not allowed.

u32 main() {
    u8[128] buffer;

    // This should fail at compile time because offset is a runtime variable
    u32 offset <- 0;
    u32 value1 <- 0x11223344;
    buffer[offset, 4] <- value1;

    return 0;
}
