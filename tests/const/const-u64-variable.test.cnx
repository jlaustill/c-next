/* test-execution */ // ADR-013: Const u64 variable
// Tests: const u64 declaration and read access
const u64 MAX_FILE_SIZE <- 4294967296;

const u64 CHUNK_SIZE <- 1048576;

u32 main() {
    // Test 1: Read const into local variable
    u64 maxSize <- MAX_FILE_SIZE;
    if (maxSize != 4294967296) return 1;

    // Test 2: Read second const
    u64 chunk <- CHUNK_SIZE;
    if (chunk != 1048576) return 2;

    // Test 3: Use const in arithmetic
    u64 numChunks <- MAX_FILE_SIZE / CHUNK_SIZE;
    if (numChunks != 4096) return 3;

    // Test 4: Use const in comparison
    if (CHUNK_SIZE >= MAX_FILE_SIZE) return 4;

    // Test 5: Multiplication with const
    u64 doubleChunk <- CHUNK_SIZE * 2;
    if (doubleChunk != 2097152) return 5;

    return 0;
}
