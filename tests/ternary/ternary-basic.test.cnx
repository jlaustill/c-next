// test-execution
// ADR-022: Basic ternary operator test
// Tests: simple relational conditions with parentheses
u32 getMax(u32 a, u32 b) {
    return (a > b) ? a : b;
}

u32 getMin(u32 a, u32 b) {
    return (a < b) ? a : b;
}

i32 getAbs(i32 x) {
    return (x < 0) ? -x : x;
}

u32 main() {
    u32 a <- 10;
    u32 b <- 20;
    u32 c <- 30;
    u32 d <- 5;
    i32 neg <- -5;
    i32 pos <- 7;


// Test max function
    u32 maxResult1 <- getMax(a, b);
    if (maxResult1 != 20) {
        return 1;
    }
    u32 maxResult2 <- getMax(c, d);
    if (maxResult2 != 30) {
        return 2;
    }


// Test min function
    u32 minResult <- getMin(a, b);
    if (minResult != 10) {
        return 3;
    }


// Test abs function
    i32 absResult1 <- getAbs(neg);
    if (absResult1 != 5) {
        return 4;
    }
    i32 absResult2 <- getAbs(pos);
    if (absResult2 != 7) {
        return 5;
    }

    return 0;
}
