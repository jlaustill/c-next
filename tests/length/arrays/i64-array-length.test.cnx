// test-execution
// Comprehensive .length test for i64 arrays across all contexts
// Tests: array.length returns 16 (element count), array[0].length returns 64 (element bit width)
i64[16] globalArr;

scope TestScope {
    public u32 getGlobalArrayLength() {
        return global.globalArr.length;
    }
    public u32 getGlobalElementLength() {
        return global.globalArr[0].length;
    }
    i64[16] scopeArr;
    public u32 getScopeArrayLength() {
        return this.scopeArr.length;
    }
    public u32 getScopeElementLength() {
        return this.scopeArr[0].length;
    }
    public i64 publicArr[16];
}

u32 checkArrayLength(i64[16] arr) {
    return arr.length;
}

u32 checkElementLength(i64[16] arr) {
    return arr[0].length;
}

struct TestStruct {
    i64[16] arr;
}

i32 main() {
    globalArr[0] <- -1000000;

    if (globalArr.length != 16) {
        return 1;
    }

    if (globalArr[0].length != 64) {
        return 2;
    }

    u32 result <- TestScope.getGlobalArrayLength();
    if (result != 16) {
        return 3;
    }

    result <- TestScope.getGlobalElementLength();
    if (result != 64) {
        return 4;
    }

    result <- TestScope.getScopeArrayLength();
    if (result != 16) {
        return 5;
    }

    result <- TestScope.getScopeElementLength();
    if (result != 64) {
        return 6;
    }

    if (TestScope.publicArr.length != 16) {
        return 7;
    }

    if (TestScope.publicArr[0].length != 64) {
        return 8;
    }

    i64[16] localArr;
    localArr[0] <- -1000000;
    if (localArr.length != 16) {
        return 9;
    }
    if (localArr[0].length != 64) {
        return 10;
    }

    i64[16] testArr;
    testArr[0] <- -1000000;
    result <- checkArrayLength(testArr);
    if (result != 16) {
        return 11;
    }

    result <- checkElementLength(testArr);
    if (result != 64) {
        return 12;
    }

    TestStruct ts;
    ts.arr[0] <- -1000000;
    if (ts.arr.length != 16) {
        return 13;
    }
    if (ts.arr[0].length != 64) {
        return 14;
    }

    return 0;
}
