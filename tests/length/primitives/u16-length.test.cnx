// test-execution
// Comprehensive .length test for u16 type across all contexts
// Tests: .length returns 16 for u16 in every possible scope and access pattern
u16 globalVar <- 1000;

scope TestScope {
    public u32 getGlobalLength() {
        return global.globalVar.length;
    }
    u16 scopeMember <- 1000;
    public u32 getMemberLength() {
        return this.scopeMember.length;
    }
    public u16 publicMember <- 1000;
}

u32 checkParamLength(u16 param) {
    return param.length;
}

struct TestStruct {
    u16 member;
}

i32 main() {
    if (globalVar.length != 16) {
        return 1;
    }

    u32 result <- TestScope.getGlobalLength();
    if (result != 16) {
        return 2;
    }

    result <- TestScope.getMemberLength();
    if (result != 16) {
        return 3;
    }

    if (TestScope.publicMember.length != 16) {
        return 4;
    }

    u16 localVar <- 1000;
    if (localVar.length != 16) {
        return 5;
    }

    u16 testVal <- 1000;
    result <- checkParamLength(testVal);
    if (result != 16) {
        return 6;
    }

    TestStruct ts;
    ts.member <- 1000;
    if (ts.member.length != 16) {
        return 7;
    }

    u16[4] arr;
    arr[0] <- 1000;
    if (arr[0].length != 16) {
        return 8;
    }

    return 0;
}
