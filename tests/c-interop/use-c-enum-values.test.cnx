/* test-execution */
/* test-coverage: 30-use-c-enum-values */
// Tests: Using C enums with explicit values
// ADR-010: Enum value import from C headers

#include "c-interop/enums.h"

u32 main() {
    // Test 1: Enum Status with explicit values
    i32 ok <- STATUS_OK;
    i32 err <- STATUS_ERROR;
    i32 pending <- STATUS_PENDING;
    i32 complete <- STATUS_COMPLETE;

    if (ok != 0) return 1;
    if (err != -1) return 2;
    if (pending != 100) return 3;
    if (complete != 200) return 4;

    // Test 2: BaudRate with large values
    i32 baud1 <- BAUD_9600;
    i32 baud2 <- BAUD_115200;

    if (baud1 != 9600) return 5;
    if (baud2 != 115200) return 6;

    // Test 3: Permissions bit flags
    i32 none <- FLAG_NONE;
    i32 read <- FLAG_READ;
    i32 write <- FLAG_WRITE;
    i32 exec <- FLAG_EXECUTE;
    i32 all <- FLAG_ALL;

    if (none != 0) return 7;
    if (read != 1) return 8;
    if (write != 2) return 9;
    if (exec != 4) return 10;
    if (all != 7) return 11;

    // Test 4: Combine flags with bitwise OR
    i32 rw <- read | write;
    if (rw != 3) return 12;

    return 0;  // All tests passed
}
