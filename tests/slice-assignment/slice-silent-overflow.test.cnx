// test-error
// Tests: Issue #234 - Runtime slice offsets are now compile-time errors
// Slice assignment requires compile-time constant offset and length
// to ensure bounds safety at compile time.

u32 main() {
    u8[8] buffer;
    u32 offset <- 0;
    u8 length <- 4;

    // This should fail at compile time because offset is a runtime variable
    u32 value1 <- 0x11223344;
    buffer[offset, length] <- value1;

    return 0;
}
