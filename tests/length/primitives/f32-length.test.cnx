// test-execution
// Comprehensive .length test for f32 type across all contexts
// Tests: .length returns 32 for f32 in every possible scope and access pattern
f32 globalVar <- 3.14;

scope TestScope {
    public u32 getGlobalLength() {
        return global.globalVar.length;
    }
    f32 scopeMember <- 3.14;
    public u32 getMemberLength() {
        return this.scopeMember.length;
    }
    public f32 publicMember <- 3.14;
}

u32 checkParamLength(f32 param) {
    return param.length;
}

struct TestStruct {
    f32 member;
}

i32 main() {
    if (globalVar.length != 32) {
        return 1;
    }

    if (TestScope.getGlobalLength() != 32) {
        return 2;
    }

    if (TestScope.getMemberLength() != 32) {
        return 3;
    }

    if (TestScope.publicMember.length != 32) {
        return 4;
    }

    f32 localVar <- 3.14;
    if (localVar.length != 32) {
        return 5;
    }

    f32 testVal <- 3.14;
    if (checkParamLength(testVal) != 32) {
        return 6;
    }

    TestStruct ts;
    ts.member <- 3.14;
    if (ts.member.length != 32) {
        return 7;
    }

    f32 arr[4];
    arr[0] <- 3.14;
    if (arr[0].length != 32) {
        return 8;
    }

    return 0;
}
