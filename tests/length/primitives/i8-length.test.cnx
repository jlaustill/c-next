// test-execution
// Comprehensive .length test for i8 type across all contexts
// Tests: .length returns 8 for i8 in every possible scope and access pattern
i8 globalVar <- -42;

scope TestScope {
    public u32 getGlobalLength() {
        return global.globalVar.length;
    }
    i8 scopeMember <- -42;
    public u32 getMemberLength() {
        return this.scopeMember.length;
    }
    public i8 publicMember <- -42;
}

u32 checkParamLength(i8 param) {
    return param.length;
}

struct TestStruct {
    i8 member;
}

i32 main() {
    if (globalVar.length != 8) {
        return 1;
    }

    u32 result <- TestScope.getGlobalLength();
    if (result != 8) {
        return 2;
    }

    result <- TestScope.getMemberLength();
    if (result != 8) {
        return 3;
    }

    if (TestScope.publicMember.length != 8) {
        return 4;
    }

    i8 localVar <- -42;
    if (localVar.length != 8) {
        return 5;
    }

    i8 testVal <- -42;
    result <- checkParamLength(testVal);
    if (result != 8) {
        return 6;
    }

    TestStruct ts;
    ts.member <- -42;
    if (ts.member.length != 8) {
        return 7;
    }

    i8 arr[4];
    arr[0] <- -42;
    if (arr[0].length != 8) {
        return 8;
    }

    return 0;
}
