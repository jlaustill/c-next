// ADR-001: Comparison in while loops
// Tests: = operator transpiles to == in while conditions

void countToZero(u32 count) {
    while (count != 0) {
        count -<- 1;
    }
}

void waitForFlag(bool done) {
    while (done = false) {
        // wait
    }
}

u32 sumUntilLimit(u32 limit) {
    u32 sum <- 0;
    u32 i <- 0;
    while (i != limit) {
        sum +<- i;
        i +<- 1;
    }
    return sum;
}
