// test-execution
// Tests: i32 as loop counter
// Coverage: Section 1.2 i32 as loop counter
u32 main() {
    u32 sum <- 0;

    // Basic i32 counter incrementing
    for (i32 i <- 0; i < 10; i +<- 1) {
        sum +<- 1;
    }
    if (sum != 10) return 1;

    // i32 counter with larger values
    sum <- 0;
    for (i32 j <- 100; j < 110; j +<- 1) {
        sum +<- 1;
    }
    if (sum != 10) return 2;

    // i32 counter decrementing
    sum <- 0;
    for (i32 k <- 10; k > 0; k -<- 1) {
        sum +<- 1;
    }
    if (sum != 10) return 3;

    // i32 counter with negative start
    sum <- 0;
    for (i32 m <- -5; m < 5; m +<- 1) {
        sum +<- 1;
    }
    if (sum != 10) return 4;

    // i32 counter crossing zero
    i32 cross_count <- 0;
    for (i32 n <- -3; n <= 3; n +<- 1) {
        cross_count +<- 1;
    }
    if (cross_count != 7) return 5;

    // i32 counter with step > 1
    sum <- 0;
    for (i32 p <- 0; p < 20; p +<- 2) {
        sum +<- 1;
    }
    if (sum != 10) return 6;

    // Nested loops with i32 counters
    sum <- 0;
    for (i32 outer <- 0; outer < 3; outer +<- 1) {
        for (i32 inner <- 0; inner < 4; inner +<- 1) {
            sum +<- 1;
        }
    }
    if (sum != 12) return 7;

    // i32 counter used in calculations
    i32 calc_sum <- 0;
    for (i32 q <- 1; q <= 5; q +<- 1) {
        calc_sum +<- q;
    }
    if (calc_sum != 15) return 8;

    return 0;
}
