// test-execution
// Comprehensive .length test for bitmap24 type across all contexts
// Tests: .length returns 24 for bitmap24 in every possible scope and access pattern
// Define bitmap24 type
bitmap24 StatusFlags {
    bit0,
    bit1,
    bit2,
    bit3,
    bit4,
    bit5,
    bit6,
    bit7,
    bit8,
    bit9,
    bit10,
    bit11,
    bit12,
    bit13,
    bit14,
    bit15,
    bit16,
    bit17,
    bit18,
    bit19,
    bit20,
    bit21,
    bit22,
    bit23
}

StatusFlags globalVar;

scope TestScope {
    public u32 getGlobalLength() {
        return global.globalVar.length;
    }
    StatusFlags scopeMember;
    public u32 getMemberLength() {
        return this.scopeMember.length;
    }
    public StatusFlags publicMember;
}

u32 checkParamLength(StatusFlags param) {
    return param.length;
}

struct TestStruct {
    StatusFlags member;
}

i32 main() {
    globalVar.bit0 <- true;

    if (globalVar.length != 24) {
        return 1;
    }

    u32 result <- TestScope.getGlobalLength();
    if (result != 24) {
        return 2;
    }

    result <- TestScope.getMemberLength();
    if (result != 24) {
        return 3;
    }

    if (TestScope.publicMember.length != 24) {
        return 4;
    }

    StatusFlags localVar;
    localVar.bit0 <- true;
    if (localVar.length != 24) {
        return 5;
    }

    StatusFlags testVal;
    testVal.bit0 <- true;
    result <- checkParamLength(testVal);
    if (result != 24) {
        return 6;
    }

    // Issue #196 Bug 2 test: Array element .length no longer triggers false positive
    // Previously this would cause: "use of uninitialized variable 'arr'"
    // Since .length is a compile-time type property, no init check is needed
    StatusFlags[4] arr;
    if (arr[0].length != 24) {
        return 7;
    }

    return 0;
}
