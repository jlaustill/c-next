// Test: Scope shadowing between global and scope (ADR-016)

const u8 flags <- 0;  // Global

scope Control {
    u8 flags <- 0b11111111;  // Scope member - same name!

    void setFlag() {
        // Which 'flags' does this reference?
        flags <- 0b10101010;
    }
}

void main() {
    Control.setFlag();
}
