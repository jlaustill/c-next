{
  "name": "c-next",
  "version": "0.1.35",
  "description": "A safer C for embedded systems development. Transpiles to clean, readable C.",
  "main": "src/index.ts",
  "bin": {
    "cnext": "./bin/cnext.js"
  },
  "scripts": {
    "antlr": "antlr4ng -Dlanguage=TypeScript -visitor -listener -o src/antlr_parser grammar/CNext.g4",
    "antlr:c": "antlr4ng -Dlanguage=TypeScript -visitor -listener -o src/antlr_parser/c grammar/C.g4",
    "antlr:cpp:lexer": "antlr4ng -Dlanguage=TypeScript -o src/antlr_parser/cpp grammar/CPP14Lexer.g4",
    "antlr:cpp:parser": "antlr4ng -Dlanguage=TypeScript -visitor -listener -o src/antlr_parser/cpp -lib src/antlr_parser/cpp/grammar grammar/CPP14Parser.g4",
    "antlr:cpp": "npm run antlr:cpp:lexer && npm run antlr:cpp:parser",
    "antlr:all": "npm run antlr && npm run antlr:c && npm run antlr:cpp",
    "start": "tsx src/index.ts",
    "dev": "tsx src/index.ts",
    "typecheck": "tsc --noEmit",
    "test": "tsx scripts/test.ts",
    "test:cli": "node scripts/test-cli.js",
    "test:q": "tsx scripts/test.ts -q",
    "test:update": "tsx scripts/test.ts --update",
    "analyze": "./scripts/static-analysis.sh",
    "clean": "rm -rf src/antlr_parser",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "oxlint:check": "oxlint src/",
    "oxlint:fix": "oxlint src/ --fix",
    "prepare": "husky",
    "prepublishOnly": "npm run prettier:check && npm run oxlint:check && npm test",
    "coverage:check": "tsx scripts/coverage-checker.ts check",
    "coverage:report": "tsx scripts/coverage-checker.ts report",
    "coverage:gaps": "tsx scripts/coverage-checker.ts gaps",
    "coverage:ids": "tsx scripts/coverage-checker.ts ids",
    "coverage:grammar": "tsx scripts/grammar-coverage.ts report",
    "coverage:grammar:check": "tsx scripts/grammar-coverage.ts check",
    "coverage:grammar:console": "tsx scripts/grammar-coverage.ts console",
    "unit": "vitest run",
    "unit:watch": "vitest",
    "unit:coverage": "vitest run --coverage",
    "unit:coverage:html": "vitest run --coverage && echo 'Coverage report: coverage/index.html'",
    "test:all": "npm run unit && npm run test:q"
  },
  "keywords": [
    "c",
    "embedded",
    "transpiler",
    "safety",
    "misra"
  ],
  "author": "Joshua Austill <jlaustill@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jlaustill/c-next.git"
  },
  "bugs": {
    "url": "https://github.com/jlaustill/c-next/issues"
  },
  "homepage": "https://github.com/jlaustill/c-next#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "bin/",
    "src/",
    "grammar/",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "antlr4ng-cli": "^2.0.0",
    "husky": "^9.1.7",
    "knip": "^5.82.1",
    "lint-staged": "^16.2.7",
    "oxlint": "^1.39.0",
    "prettier": "^3.7.4",
    "vitest": "^3.0.0"
  },
  "dependencies": {
    "antlr4ng": "^3.0.16",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown"
    ],
    "*.ts": [
      "oxlint --fix"
    ]
  }
}
