// test-error
// Tests: Issue #234 - Compile-time bounds checking for slice assignment
// Slice assignments that exceed buffer bounds are now caught at compile time.

u32 main() {
    u8 buffer[32];

    // This should fail at compile time
    // Buffer size is 32 bytes, trying to write 8 bytes at offset 28
    // 28 + 8 = 36 > 32 - compile-time error
    u64 largeValue <- 0xDEADBEEFDEADBEEF;
    buffer[28, 8] <- largeValue;

    return 0;
}
