#include "Arduino.h";

class QuickTest {
    static uint16 testValue <- 42;
    boolean isWorking;
    
    public QuickTest() {
        isWorking <- true;
    }
    
    public String getMessage() {
        String result <- `The test value is ${testValue} and it's working: ${isWorking}`;
        return result;
    }
    
    public void runTest() {
        if (isWorking) {
            Serial.println(`✅ c-next syntax highlighting is working!`);
        } else {
            Serial.println(`❌ Something went wrong`);
        }
    }
}