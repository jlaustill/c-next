// test-execution
// Tests: Enum access inside scopes without global. prefix when unambiguous

enum EColor { RED, GREEN, BLUE }

scope Test {
    public u32 checkRed(EColor c) {
        // EColor.RED should work without global. prefix
        // since there's no scope member named EColor
        if (c = EColor.RED) { return 1; }
        return 0;
    }
}

u32 main() {
    EColor c <- EColor.RED;

    // Test that scope can access enum without global. prefix
    u32 result <- Test.checkRed(c);
    if (result != 1) { return 1; }

    return 0;
}
