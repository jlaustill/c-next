// test-execution
// Tests .byte_length property for all integer types (ADR-058)
// Each integer type should return its byte size

u8 global_u8 <- 255;
u16 global_u16 <- 65535;
u32 global_u32 <- 100000;
u64 global_u64 <- 1000000000;
i8 global_i8 <- -128;
i16 global_i16 <- -32768;
i32 global_i32 <- -100000;
i64 global_i64 <- -1000000000;

i32 main() {
    // Test u8 byte_length = 1
    if (global_u8.byte_length != 1) {
        return 1;
    }

    // Test u16 byte_length = 2
    if (global_u16.byte_length != 2) {
        return 2;
    }

    // Test u32 byte_length = 4
    if (global_u32.byte_length != 4) {
        return 3;
    }

    // Test u64 byte_length = 8
    if (global_u64.byte_length != 8) {
        return 4;
    }

    // Test i8 byte_length = 1
    if (global_i8.byte_length != 1) {
        return 5;
    }

    // Test i16 byte_length = 2
    if (global_i16.byte_length != 2) {
        return 6;
    }

    // Test i32 byte_length = 4
    if (global_i32.byte_length != 4) {
        return 7;
    }

    // Test i64 byte_length = 8
    if (global_i64.byte_length != 8) {
        return 8;
    }

    // Test local variables
    u8 local_u8 <- 255;
    if (local_u8.byte_length != 1) {
        return 9;
    }

    u64 local_u64 <- 1000000000;
    if (local_u64.byte_length != 8) {
        return 10;
    }

    return 0;
}
