// test-execution
// Tests .byte_length property for bool type (ADR-058)
// Bool storage size is 1 byte

bool globalBool <- true;

struct TestStruct {
    bool flag;
}

i32 main() {
    // Test global bool byte_length = 1
    if (globalBool.byte_length != 1) {
        return 1;
    }

    // Test local bool
    bool localBool <- false;
    if (localBool.byte_length != 1) {
        return 2;
    }

    // Test struct member
    TestStruct ts;
    ts.flag <- true;
    if (ts.flag.byte_length != 1) {
        return 3;
    }

    return 0;
}
