// test-execution
// Comprehensive .bit_length test for u32 type across all contexts (ADR-058)
// Tests: .bit_length returns 32 for u32 in every possible scope and access pattern
u32 globalVar <- 100000;

scope TestScope {
    public u32 getGlobalBitLength() {
        return global.globalVar.bit_length;
    }
    u32 scopeMember <- 100000;
    public u32 getMemberBitLength() {
        return this.scopeMember.bit_length;
    }
    public u32 publicMember <- 100000;
}

u32 checkParamBitLength(u32 param) {
    return param.bit_length;
}

struct TestStruct {
    u32 member;
}

i32 main() {
    if (globalVar.bit_length != 32) {
        return 1;
    }

    u32 result <- TestScope.getGlobalBitLength();
    if (result != 32) {
        return 2;
    }

    result <- TestScope.getMemberBitLength();
    if (result != 32) {
        return 3;
    }

    if (TestScope.publicMember.bit_length != 32) {
        return 4;
    }

    u32 localVar <- 100000;
    if (localVar.bit_length != 32) {
        return 5;
    }

    u32 testVal <- 100000;
    result <- checkParamBitLength(testVal);
    if (result != 32) {
        return 6;
    }

    TestStruct ts;
    ts.member <- 100000;
    if (ts.member.bit_length != 32) {
        return 7;
    }

    u32[4] arr;
    arr[0] <- 100000;
    if (arr[0].bit_length != 32) {
        return 8;
    }

    return 0;
}
