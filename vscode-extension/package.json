{
  "name": "cnext-language-support",
  "displayName": "c-next Language Support",
  "description": "Full language support for c-next programming language including IntelliSense, diagnostics, and syntax highlighting",
  "version": "0.2.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:cnext"
  ],
  "contributes": {
    "languages": [
      {
        "id": "cnext",
        "aliases": [
          "c-next",
          "cnext"
        ],
        "extensions": [
          ".cn",
          ".cnm"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "cnext",
        "scopeName": "source.cnext",
        "path": "./syntaxes/cnext.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "c-next Language Server Configuration",
      "properties": {
        "cnextLanguageServer.maxNumberOfProblems": {
          "type": "number",
          "default": 1000,
          "description": "Controls the maximum number of problems reported by the server."
        },
        "cnextLanguageServer.enableDiagnostics": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable diagnostic features."
        },
        "cnextLanguageServer.transpilerPath": {
          "type": "string",
          "description": "Path to the c-next transpiler executable."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./ && cd server && npm run build",
    "watch": "tsc -watch -p ./",
    "package": "npx @vscode/vsce package",
    "install-server": "cd server && npm install",
    "build-server": "cd server && npm run build"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.74.0",
    "typescript": "^5.0.0",
    "@vscode/vsce": "^2.15.0"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jlaustill/c-next.git"
  },
  "publisher": "jlaustill",
  "license": "MIT"
}