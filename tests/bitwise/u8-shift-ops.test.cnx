/* test-coverage: 5.5-u8-left-shift, 5.6-u8-right-shift, 5.5-shift-by-variable */
/* test-execution */
// Test u8 shift operations: left shift (<<) and right shift (>>)
// Coverage: Section 5.5-5.6 for u8 type

u32 main() {
    // Left shift by literal
    u8 a <- 0b00000001;
    u8 left1 <- a << 1;  // 0b00000010 = 2
    u8 left4 <- a << 4;  // 0b00010000 = 16
    u8 left7 <- a << 7;  // 0b10000000 = 128

    // Right shift by literal
    u8 b <- 0b10000000;
    u8 right1 <- b >> 1;  // 0b01000000 = 64
    u8 right4 <- b >> 4;  // 0b00001000 = 8
    u8 right7 <- b >> 7;  // 0b00000001 = 1

    // Shift by variable
    u8 c <- 0b00001111;
    u8 shift_amount <- 2;
    u8 left_var <- c << shift_amount;   // 0b00111100 = 60
    u8 right_var <- c >> shift_amount;  // 0b00000011 = 3

    // Shift by zero (edge case)
    u8 d <- 0b10101010;
    u8 left_zero <- d << 0;   // 0b10101010 = 170
    u8 right_zero <- d >> 0;  // 0b10101010 = 170

    // Complex shift patterns
    u8 e <- 255;
    u8 multi_shift <- (e >> 2) << 1;  // (255 >> 2) = 63, (63 << 1) = 126

    // Verify results
    if (left1 = 2 && left4 = 16 && left7 = 128) {
        if (right1 = 64 && right4 = 8 && right7 = 1) {
            if (left_var = 60 && right_var = 3) {
                if (left_zero = 170 && right_zero = 170) {
                    if (multi_shift = 126) {
                        return 0;
                    }
                }
            }
        }
    }
    return 1;
}
