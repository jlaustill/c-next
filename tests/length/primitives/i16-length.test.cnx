// test-execution
// Comprehensive .length test for i16 type across all contexts
// Tests: .length returns 16 for i16 in every possible scope and access pattern
i16 globalVar <- -1000;

scope TestScope {
    public u32 getGlobalLength() {
        return global.globalVar.length;
    }
    i16 scopeMember <- -1000;
    public u32 getMemberLength() {
        return this.scopeMember.length;
    }
    public i16 publicMember <- -1000;
}

u32 checkParamLength(i16 param) {
    return param.length;
}

struct TestStruct {
    i16 member;
}

i32 main() {
    if (globalVar.length != 16) {
        return 1;
    }

    u32 result <- TestScope.getGlobalLength();
    if (result != 16) {
        return 2;
    }

    result <- TestScope.getMemberLength();
    if (result != 16) {
        return 3;
    }

    if (TestScope.publicMember.length != 16) {
        return 4;
    }

    i16 localVar <- -1000;
    if (localVar.length != 16) {
        return 5;
    }

    i16 testVal <- -1000;
    result <- checkParamLength(testVal);
    if (result != 16) {
        return 6;
    }

    TestStruct ts;
    ts.member <- -1000;
    if (ts.member.length != 16) {
        return 7;
    }

    i16[4] arr;
    arr[0] <- -1000;
    if (arr[0].length != 16) {
        return 8;
    }

    return 0;
}
