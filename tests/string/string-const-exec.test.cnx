// test-execution
// ADR-045: Validate const string inference at runtime
const string VERSION <- "1.0.0";

const string APP_NAME <- "TestApp";

const string EMPTY_CONST <- "";

const string LONG_CONST <- "This is a longer constant string for testing";

i32 main() {
   
// Test 1-3: Basic const string
    if (VERSION.char_count != 5) return 1;
    if (VERSION != "1.0.0") return 2;
    if (VERSION.capacity != 5) return 3; // Auto-inferred from literal

   
// Test 4-6: Another const string
    if (APP_NAME.char_count != 7) return 4;
    if (APP_NAME != "TestApp") return 5;
    if (APP_NAME.capacity != 7) return 6;

   
// Test 7-9: Empty const string
    if (EMPTY_CONST.char_count != 0) return 7;
    if (EMPTY_CONST != "") return 8;
    if (EMPTY_CONST.capacity != 0) return 9;

   
// Test 10-12: Longer const string
    if (LONG_CONST.char_count != 44) return 10;
    if (LONG_CONST.capacity != 44) return 11;
    if (LONG_CONST.size != 45) return 12;

   
// Test 13-14: Compare const to local
    string<32> local <- "1.0.0";
    if (VERSION != local) return 13;
    if (local != VERSION) return 14;

   
// Test 15: Const comparison
    if (VERSION = APP_NAME) return 15; // Should be different

    return 0;
}
