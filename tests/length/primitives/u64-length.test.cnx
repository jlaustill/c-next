/* test-execution */ // Comprehensive .length test for u64 type across all contexts
// Tests: .length returns 64 for u64 in every possible scope and access pattern
u64 globalVar <- 1000000;

scope TestScope {
    public u32 getGlobalLength() {
        return global.globalVar.length;
    }
    u64 scopeMember <- 1000000;
    public u32 getMemberLength() {
        return this.scopeMember.length;
    }
    public u64 publicMember <- 1000000;
}

u32 checkParamLength(u64 param) {
    return param.length;
}

struct TestStruct {
    u64 member;
}

i32 main() {
    if (globalVar.length != 64) {
        return 1;
    }

    if (TestScope.getGlobalLength() != 64) {
        return 2;
    }

    if (TestScope.getMemberLength() != 64) {
        return 3;
    }

    if (TestScope.publicMember.length != 64) {
        return 4;
    }

    u64 localVar <- 1000000;
    if (localVar.length != 64) {
        return 5;
    }

    u64 testVal <- 1000000;
    if (checkParamLength(testVal) != 64) {
        return 6;
    }

    TestStruct ts;
    ts.member <- 1000000;
    if (ts.member.length != 64) {
        return 7;
    }

    u64 arr[4];
    arr[0] <- 1000000;
    if (arr[0].length != 64) {
        return 8;
    }

    return 0;
}
