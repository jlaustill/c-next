{
  "name": "c-next",
  "version": "0.2.13",
  "description": "A safer C for embedded systems development. Transpiles to clean, readable C.",
  "packageManager": "npm@11.9.0",
  "type": "module",
  "main": "src/index.ts",
  "bin": {
    "cnext": "./bin/cnext.js"
  },
  "scripts": {
    "antlr": "antlr4ng -Dlanguage=TypeScript -visitor -listener -o src/transpiler/logic/parser grammar/CNext.g4",
    "antlr:c": "antlr4ng -Dlanguage=TypeScript -visitor -listener -o src/transpiler/logic/parser/c grammar/C.g4",
    "antlr:cpp:lexer": "antlr4ng -Dlanguage=TypeScript -o src/transpiler/logic/parser/cpp grammar/CPP14Lexer.g4",
    "antlr:cpp:parser": "antlr4ng -Dlanguage=TypeScript -visitor -listener -o src/transpiler/logic/parser/cpp -lib src/transpiler/logic/parser/cpp/grammar grammar/CPP14Parser.g4",
    "antlr:cpp": "npm run antlr:cpp:lexer && npm run antlr:cpp:parser",
    "antlr:all": "npm run antlr && npm run antlr:c && npm run antlr:cpp",
    "start": "tsx src/index.ts",
    "dev": "tsx src/index.ts",
    "typecheck": "tsc --noEmit",
    "test": "tsx scripts/test.ts",
    "test:cli": "node scripts/test-cli.js",
    "test:q": "tsx scripts/test.ts -q",
    "test:update": "tsx scripts/test.ts --update",
    "integration:transpile": "tsx scripts/test.ts --transpile-only",
    "integration:execute": "tsx scripts/test.ts --execute-only",
    "analyze": "./scripts/static-analysis.sh",
    "clean": "rm -rf dist src/transpiler/logic/parser/grammar src/transpiler/logic/parser/c/grammar src/transpiler/logic/parser/cpp/grammar",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "cspell:check": "cspell .",
    "oxlint:check": "oxlint src/ --ignore-pattern '**/parser/grammar/**' --ignore-pattern '**/parser/c/grammar/**' --ignore-pattern '**/parser/cpp/grammar/**'",
    "oxlint:fix": "oxlint src/ --ignore-pattern '**/parser/grammar/**' --ignore-pattern '**/parser/c/grammar/**' --ignore-pattern '**/parser/cpp/grammar/**' --fix",
    "lint:test-location": "! find src -name '*.test.ts' | grep -qv '__tests__' || (echo 'Error: .test.ts files must be in __tests__ directories' && exit 1)",
    "depcruise": "depcruise src/transpiler --config .dependency-cruiser.cjs",
    "depcruise:graph": "depcruise src/transpiler --config .dependency-cruiser.cjs --output-type dot | dot -T svg > dependency-graph.svg",
    "prepare": "husky",
    "prepublishOnly": "npm run prettier:check && npm run oxlint:check && npm run build && npm test",
    "coverage:check": "tsx scripts/coverage-checker.ts check",
    "coverage:report": "tsx scripts/coverage-checker.ts report",
    "coverage:gaps": "tsx scripts/coverage-checker.ts gaps",
    "coverage:ids": "tsx scripts/coverage-checker.ts ids",
    "coverage:grammar": "tsx scripts/grammar-coverage.ts report",
    "coverage:grammar:check": "tsx scripts/grammar-coverage.ts check",
    "coverage:grammar:console": "tsx scripts/grammar-coverage.ts console",
    "unit": "vitest run",
    "unit:watch": "vitest",
    "unit:coverage": "vitest run --coverage",
    "unit:coverage:html": "vitest run --coverage && echo 'Coverage report: coverage/index.html'",
    "build": "node scripts/build.mjs",
    "test:all": "npm run build && npm run unit && npm run test:q && npm run validate:c",
    "validate:c": "node scripts/batch-validate.mjs",
    "duplication": "npx jscpd src/ scripts/ --reporters console",
    "duplication:json": "npx jscpd src/ scripts/ --reporters json --output .jscpd",
    "duplication:sonar": "curl -s 'https://sonarcloud.io/api/measures/component_tree?component=jlaustill_c-next&metricKeys=duplicated_blocks,duplicated_lines&s=metric&metricSort=duplicated_blocks&metricSortFilter=withMeasuresOnly&asc=false&ps=20' | jq -r '.components[] | \"\\(.path)\\t\\(.measures[0].value) blocks\\t\\(.measures[1].value) lines\"'",
    "duplication:all": "echo '=== Local (jscpd) ===' && npm run duplication && echo '\n=== SonarCloud ===' && npm run duplication:sonar",
    "analyze:prune": "ts-prune",
    "analyze:madge": "madge src/ --circular --extensions ts",
    "analyze:madge:graph": "madge src/ --image docs/architecture/dependency-graph.svg --extensions ts --exclude '(parser/(grammar|c/grammar|cpp/grammar)|__tests__)' --layout sfdp",
    "analyze:cpd": "./scripts/cpd.sh",
    "analyze:duplication": "npx jscpd src/ scripts/",
    "analyze:all": "npm run analyze:duplication && npm run analyze:prune && npm run analyze:madge"
  },
  "keywords": [
    "c",
    "embedded",
    "transpiler",
    "safety",
    "misra"
  ],
  "author": "Joshua Austill <jlaustill@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jlaustill/c-next.git"
  },
  "bugs": {
    "url": "https://github.com/jlaustill/c-next/issues"
  },
  "homepage": "https://github.com/jlaustill/c-next#readme",
  "engines": {
    "node": ">=18.20.0"
  },
  "files": [
    "bin/",
    "dist/",
    "src/",
    "grammar/",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@types/node": "^25.2.1",
    "@types/yargs": "^17.0.35",
    "@vitest/coverage-v8": "^4.0.18",
    "antlr4ng-cli": "^2.0.0",
    "chalk": "^5.6.2",
    "cspell": "^9.6.4",
    "dependency-cruiser": "^17.3.7",
    "esbuild": "^0.27.3",
    "husky": "^9.1.7",
    "knip": "^5.83.1",
    "lint-staged": "^16.2.7",
    "madge": "^8.0.0",
    "oxlint": "^1.43.0",
    "prettier": "^3.8.1",
    "ts-prune": "^0.10.3",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@n1ru4l/toposort": "^0.0.1",
    "antlr4ng": "^3.0.16",
    "cosmiconfig": "^9.0.0",
    "flat-cache": "^6.1.20",
    "immer": "^11.1.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "yargs": "^18.0.0"
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown"
    ],
    "*.ts": [
      "oxlint --fix"
    ]
  },
  "volta": {
    "node": "24.13.1",
    "npm": "11.8.0"
  }
}
