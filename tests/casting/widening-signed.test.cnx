// ADR-024: Test that signed widening conversions are implicit and safe
// i8 -> i16 -> i32 -> i64 should all work without explicit casts
void main() {
    i8 sbyte <- -128;
    i16 sword <- sbyte; // i8 -> i16: widening, safe
    i32 sdword <- sword; // i16 -> i32: widening, safe
    i64 sqword <- sdword; // i32 -> i64: widening, safe

    // Direct widening from smallest to largest
    i64 direct <- sbyte; // i8 -> i64: widening, safe
}
