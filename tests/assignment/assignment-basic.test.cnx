// test-execution
// ADR-001: Basic assignment operator
// Tests: <- operator transpiles to = in C
u32 counter <- 0;

i32 offset <- -10;

bool flag <- true;

void updateValues() {
    counter <- 42;
    offset <- 100;
    flag <- false;
}

u32 main() {
    updateValues();

    // Validate all assignments worked correctly
    if (counter = 42 && offset = 100 && flag = false) {
        return 0;
    }
    return 1;
}
