// test-execution
// ADR-022: Ternary operator test for u8
// Tests: ternary with u8 in conditions and branches
u8 getMax(u8 a, u8 b) {
    return (a > b) ? a : b;
}

u8 getMin(u8 a, u8 b) {
    return (a < b) ? a : b;
}

u32 main() {
    u8 a <- 10;
    u8 b <- 20;
    u8 c <- 30;
    u8 d <- 5;


// Test max function
    u8 maxResult1 <- getMax(a, b);
    if (maxResult1 != 20) {
        return 1;
    }
    u8 maxResult2 <- getMax(c, d);
    if (maxResult2 != 30) {
        return 2;
    }


// Test min function
    u8 minResult1 <- getMin(a, b);
    if (minResult1 != 10) {
        return 3;
    }
    u8 minResult2 <- getMin(c, d);
    if (minResult2 != 5) {
        return 4;
    }


// Test inline ternary
    u8 result <- (a > b) ? a : b;
    if (result != 20) {
        return 5;
    }


// Test with edge cases - max value
    u8 max_val <- 255;
    u8 mid_val <- 127;
    u8 edge_result <- (max_val > mid_val) ? max_val : mid_val;
    if (edge_result != 255) {
        return 6;
    }


// Test with edge cases - min value (0)
    u8 zero <- 0;
    u8 one <- 1;
    u8 zero_result <- (zero < one) ? zero : one;
    if (zero_result != 0) {
        return 7;
    }


// Test equality condition
    u8 equal_test <- (a = 10) ? 100 : 200;
    if (equal_test != 100) {
        return 8;
    }

    return 0;
}
