/* test-execution */
// Issue #107: Negative Case Labels - i8 Edge Cases
// Tests: boundary values and edge cases for i8 switch

i32 result;

// Test all critical i8 boundary values
void testI8Boundaries(i8 val) {
    switch (val) {
        case -128 {
            result <- 1;   // INT8_MIN
        }
        case -127 {
            result <- 2;   // INT8_MIN + 1
        }
        case -64 {
            result <- 3;   // Mid-negative
        }
        case -1 {
            result <- 4;   // Just below zero
        }
        case 0 {
            result <- 5;   // Zero
        }
        case 1 {
            result <- 6;   // Just above zero
        }
        case 64 {
            result <- 7;   // Mid-positive
        }
        case 126 {
            result <- 8;   // INT8_MAX - 1
        }
        case 127 {
            result <- 9;   // INT8_MAX
        }
        default {
            result <- 99;
        }
    }
}

// Test consecutive negative values
void testConsecutiveNegatives(i8 val) {
    switch (val) {
        case -5 {
            result <- 10;
        }
        case -4 {
            result <- 11;
        }
        case -3 {
            result <- 12;
        }
        case -2 {
            result <- 13;
        }
        case -1 {
            result <- 14;
        }
        default {
            result <- 99;
        }
    }
}

u32 main() {
    // Test i8 boundary values
    i8 minVal <- -128;
    i8 minPlus1 <- -127;
    i8 midNeg <- -64;
    i8 negOne <- -1;
    i8 zero <- 0;
    i8 one <- 1;
    i8 midPos <- 64;
    i8 maxMinus1 <- 126;
    i8 maxVal <- 127;
    i8 other <- 50;

    testI8Boundaries(minVal);
    if (result != 1) return 1;

    testI8Boundaries(minPlus1);
    if (result != 2) return 2;

    testI8Boundaries(midNeg);
    if (result != 3) return 3;

    testI8Boundaries(negOne);
    if (result != 4) return 4;

    testI8Boundaries(zero);
    if (result != 5) return 5;

    testI8Boundaries(one);
    if (result != 6) return 6;

    testI8Boundaries(midPos);
    if (result != 7) return 7;

    testI8Boundaries(maxMinus1);
    if (result != 8) return 8;

    testI8Boundaries(maxVal);
    if (result != 9) return 9;

    testI8Boundaries(other);
    if (result != 99) return 10;

    // Test consecutive negative values
    i8 neg5 <- -5;
    i8 neg4 <- -4;
    i8 neg3 <- -3;
    i8 neg2 <- -2;
    i8 neg1 <- -1;

    testConsecutiveNegatives(neg5);
    if (result != 10) return 11;

    testConsecutiveNegatives(neg4);
    if (result != 11) return 12;

    testConsecutiveNegatives(neg3);
    if (result != 12) return 13;

    testConsecutiveNegatives(neg2);
    if (result != 13) return 14;

    testConsecutiveNegatives(neg1);
    if (result != 14) return 15;

    return 0;
}
