{
  "name": "c-next",
  "displayName": "C-Next",
  "description": "Syntax highlighting and live C preview for C-Next, a safer C for embedded systems",
  "version": "0.3.0",
  "publisher": "jlaustill",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jlaustill/c-next"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "dependencies": {
    "antlr4ng": "^3.0.0"
  },
  "contributes": {
    "languages": [
      {
        "id": "cnext",
        "aliases": [
          "C-Next",
          "cnext"
        ],
        "extensions": [
          ".cnx"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "cnext",
        "scopeName": "source.cnext",
        "path": "./syntaxes/cnext.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "cnext.openPreview",
        "title": "Open Preview",
        "category": "C-Next"
      },
      {
        "command": "cnext.openPreviewToSide",
        "title": "Open Preview to the Side",
        "category": "C-Next"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceLangId == cnext",
          "command": "cnext.openPreviewToSide",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "cnext.openPreview",
          "when": "resourceLangId == cnext"
        },
        {
          "command": "cnext.openPreviewToSide",
          "when": "resourceLangId == cnext"
        }
      ]
    },
    "keybindings": [
      {
        "command": "cnext.openPreview",
        "key": "ctrl+shift+v",
        "mac": "cmd+shift+v",
        "when": "resourceLangId == cnext"
      },
      {
        "command": "cnext.openPreviewToSide",
        "key": "ctrl+k v",
        "mac": "cmd+k v",
        "when": "resourceLangId == cnext"
      }
    ],
    "configuration": {
      "title": "C-Next",
      "properties": {
        "cnext.preview.updateDelay": {
          "type": "number",
          "default": 300,
          "description": "Delay in milliseconds before updating the preview after typing"
        },
        "cnext.preview.showLineNumbers": {
          "type": "boolean",
          "default": true,
          "description": "Show line numbers in the C preview"
        }
      }
    }
  },
  "scripts": {
    "prebuild": "cd .. && npm run build",
    "compile": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --loader:.js=js",
    "watch": "npm run compile -- --watch",
    "package": "vsce package",
    "vscode:prepublish": "npm run compile -- --minify"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^3.0.0",
    "esbuild": "^0.24.0",
    "typescript": "^5.3.0"
  }
}
