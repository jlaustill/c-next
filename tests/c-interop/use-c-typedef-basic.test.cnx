/* test-execution */
/* test-coverage: 30-use-c-typedef */
// Tests: Using C typedef'd types from header
// ADR-010: Type definition import from C headers

#include "c-interop/typedefs.h"

u32 main() {
    // Test 1: Use byte_t (typedef uint8_t)
    byte_t b <- 255;
    if (b != 255) return 1;

    // Test 2: Use word_t (typedef uint16_t)
    word_t w <- 65535;
    if (w != 65535) return 2;

    // Test 3: Use dword_t (typedef uint32_t)
    dword_t dw <- 0xFFFFFFFF;
    if (dw != 0xFFFFFFFF) return 3;

    // Test 4: Use qword_t (typedef uint64_t)
    qword_t qw <- 0xFFFFFFFFFFFFFFFF;
    if (qw != 0xFFFFFFFFFFFFFFFF) return 4;

    // Test 5: Use offset_t (typedef int32_t)
    offset_t off <- -1000;
    if (off != -1000) return 5;

    // Test 6: Arithmetic with typedef'd types
    byte_t a <- 100;
    byte_t c <- a + 50;
    if (c != 150) return 6;

    // Test 7: Assignment between typedef'd types
    dword_t x <- 12345;
    dword_t y <- x;
    if (y != 12345) return 7;

    return 0;  // All tests passed
}
