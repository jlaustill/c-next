/* test-execution */ // Comprehensive .length test for f64 type across all contexts
// Tests: .length returns 64 for f64 in every possible scope and access pattern
f64 globalVar <- 3.14159;

scope TestScope {
    public u32 getGlobalLength() {
        return global.globalVar.length;
    }
    f64 scopeMember <- 3.14159;
    public u32 getMemberLength() {
        return this.scopeMember.length;
    }
    public f64 publicMember <- 3.14159;
}

u32 checkParamLength(f64 param) {
    return param.length;
}

struct TestStruct {
    f64 member;
}

i32 main() {
    if (globalVar.length != 64) {
        return 1;
    }

    if (TestScope.getGlobalLength() != 64) {
        return 2;
    }

    if (TestScope.getMemberLength() != 64) {
        return 3;
    }

    if (TestScope.publicMember.length != 64) {
        return 4;
    }

    f64 localVar <- 3.14159;
    if (localVar.length != 64) {
        return 5;
    }

    f64 testVal <- 3.14159;
    if (checkParamLength(testVal) != 64) {
        return 6;
    }

    TestStruct ts;
    ts.member <- 3.14159;
    if (ts.member.length != 64) {
        return 7;
    }

    f64 arr[4];
    arr[0] <- 3.14159;
    if (arr[0].length != 64) {
        return 8;
    }

    return 0;
}
