// test-execution
// ADR-013: Const i8 variable
// Tests: const i8 declaration and read access with negative values
const i8 MIN_TEMP <- -40;

const i8 MAX_TEMP <- 85;

const i8 ZERO_POINT <- 0;

u32 main() {
   
// Test 1: Read negative const into local variable
    i8 minT <- MIN_TEMP;
    if (minT != -40) return 1;

   
// Test 2: Read positive const
    i8 maxT <- MAX_TEMP;
    if (maxT != 85) return 2;

   
// Test 3: Read zero const
    i8 zero <- ZERO_POINT;
    if (zero != 0) return 3;

   
// Test 4: Use const in arithmetic (range calculation)
    i8 range <- MAX_TEMP - MIN_TEMP;
    if (range != 125) return 4;

   
// Test 5: Use negative const in comparison
    if (MIN_TEMP >= ZERO_POINT) return 5;

   
// Test 6: Use const in conditional
    i8 temp <- -20;
    if (temp < MIN_TEMP) return 6;
    if (temp > MAX_TEMP) return 7;

    return 0;
}
