// test-execution
// ADR-001: Comparison in if statements
// Tests: = operator transpiles to == in conditions
u32 checkValue(u32 x) {
    if (x = 0) {
        return 0;
    }
    if (x = 100) {
        return 100;
    }
    return x;
}

bool isPositive(i32 n) {
    if (n > 0) {
        return true;
    }
    return false;
}

u32 main() {

// Test checkValue - use variables to avoid cppcheck null pointer warning
    u32 zero <- 0;
    u32 hundred <- 100;
    u32 fifty <- 50;
    i32 positive <- 5;
    i32 negative <- -5;

    u32 result1 <- checkValue(zero);
    if (result1 != 0) {
        return 1;
    }
    u32 result2 <- checkValue(hundred);
    if (result2 != 100) {
        return 1;
    }
    u32 result3 <- checkValue(fifty);
    if (result3 != 50) {
        return 1;
    }


// Test isPositive
    bool result4 <- isPositive(positive);
    if (result4 != true) {
        return 1;
    }
    bool result5 <- isPositive(negative);
    if (result5 != false) {
        return 1;
    }

    return 0;
}
