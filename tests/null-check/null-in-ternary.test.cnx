// test-coverage: 28-null-in-ternary
// Tests: NULL check in ternary condition with c_ prefix pattern (ADR-046)
#include <stdio.h>

string<64> buffer;

// Use ternary with NULL check - c_ prefix pattern
u32 readWithFallback() {
    cstring c_result <- fgets(buffer, buffer.size, stdin);
    u32 result <- c_result != NULL ? 1 : 0;
    return result;
}

// Another pattern: equality check
bool isInputAvailable() {
    cstring c_result <- fgets(buffer, buffer.size, stdin);
    bool available <- c_result = NULL ? false : true;
    return available;
}

void main() {
    u32 success <- readWithFallback();
    bool hasInput <- isInputAvailable();
}
