// ADR-014 + ADR-006: Struct as function parameter
// Tests: pass-by-reference for struct parameters

struct Point {
    i32 x;
    i32 y;
}

void movePoint(Point p, i32 dx, i32 dy) {
    p.x +<- dx;
    p.y +<- dy;
}

void main() {
    Point origin <- { x: 0, y: 0 };
    i32 deltaX <- 10;
    i32 deltaY <- 20;
    movePoint(origin, deltaX, deltaY);
}
