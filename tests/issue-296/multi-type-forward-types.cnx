// Issue #404: Multiple type definitions for forward declaration tests
// Tests multiple structs and an enum used across files

enum EDeviceState {
    STATE_OFF <- 0,
    STATE_IDLE <- 1,
    STATE_ACTIVE <- 2,
    STATE_ERROR <- 3
}

struct DeviceConfig {
    u32 baudRate;
    u8 address;
}

struct DeviceStatus {
    EDeviceState state;
    u32 errorCount;
    bool connected;
}
