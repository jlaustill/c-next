// Test accessing local, scope, and global when all have same name
// test-execution

u32 globalCount <- 1000;  // Global (renamed to avoid shadowing)

scope Counter {
    u32 count <- 100;  // Scope

    public u32 testAllLevels() {
        u32 count <- 10;           // Local
        u32 sum <- 0;

        sum +<- count;             // Local (10)
        sum +<- this.count;        // Scope (100)
        sum +<- global.globalCount;  // Global (1000)

        return sum;
    }
}

u32 main() {
    u32 result <- Counter.testAllLevels();
    if (result != 1110) return 1;
    return 0;
}
