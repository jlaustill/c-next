/* test-execution */
// Comprehensive .length test for i8 arrays across all contexts
// Tests: array.length returns 16 (element count), array[0].length returns 8 (element bit width)

i8 globalArr[16];

scope TestScope {
    public u32 getGlobalArrayLength() {
        return global.globalArr.length;
    }

    public u32 getGlobalElementLength() {
        return global.globalArr[0].length;
    }

    i8 scopeArr[16];

    public u32 getScopeArrayLength() {
        return this.scopeArr.length;
    }

    public u32 getScopeElementLength() {
        return this.scopeArr[0].length;
    }

    public i8 publicArr[16];
}

u32 checkArrayLength(i8 arr[16]) {
    return arr.length;
}

u32 checkElementLength(i8 arr[16]) {
    return arr[0].length;
}

struct TestStruct {
    i8 arr[16];
}

i32 main() {
    globalArr[0] <- -42;

    if (globalArr.length != 16) {
        return 1;
    }

    if (globalArr[0].length != 8) {
        return 2;
    }

    if (TestScope.getGlobalArrayLength() != 16) {
        return 3;
    }

    if (TestScope.getGlobalElementLength() != 8) {
        return 4;
    }

    if (TestScope.getScopeArrayLength() != 16) {
        return 5;
    }

    if (TestScope.getScopeElementLength() != 8) {
        return 6;
    }

    if (TestScope.publicArr.length != 16) {
        return 7;
    }

    if (TestScope.publicArr[0].length != 8) {
        return 8;
    }

    i8 localArr[16];
    localArr[0] <- -42;
    if (localArr.length != 16) {
        return 9;
    }
    if (localArr[0].length != 8) {
        return 10;
    }

    i8 testArr[16];
    testArr[0] <- -42;
    if (checkArrayLength(testArr) != 16) {
        return 11;
    }

    if (checkElementLength(testArr) != 8) {
        return 12;
    }

    TestStruct ts;
    ts.arr[0] <- -42;
    if (ts.arr.length != 16) {
        return 13;
    }
    if (ts.arr[0].length != 8) {
        return 14;
    }

    return 0;
}
