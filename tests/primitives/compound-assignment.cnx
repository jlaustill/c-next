// ADR-044: Test compound assignments with overflow behavior

// Clamp variables use helper functions
clamp u8 brightness <- 100;
clamp u16 sensorValue <- 0;

// Wrap variables use natural C arithmetic
wrap u32 counter <- 0;

void update() {
    brightness +<- 10;       // Should use cnx_clamp_add_u8
    brightness -<- 5;        // Should use cnx_clamp_sub_u8
    sensorValue *<- 2;       // Should use cnx_clamp_mul_u16

    counter +<- 1;           // Should use natural += (wrap)
}
