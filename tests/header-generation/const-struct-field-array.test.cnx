// Tests: Struct fields with const-based array dimensions in headers

const u8 BUFFER_SIZE <- 8;
const u8 ROWS <- 4;
const u8 COLS <- 3;
const u8 HEX_SIZE <- 0x10;
const u8 BIN_SIZE <- 0b1010;

struct TData {
    // Single dimension with constant
    u8[BUFFER_SIZE] buffer;

    // Multi-dimensional with constants
    i16[ROWS] matrix[COLS];

    // Hex constant dimension
    bool[HEX_SIZE] flags;

    // Binary constant dimension
    u16[BIN_SIZE] binary_arr;

    // Literal dimension (control case)
    u32[5] literal_arr;

    // Non-array field
    i32 value;
}

TData data;

void main() {
    data.buffer[0] <- 1;
}
