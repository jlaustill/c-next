// test-execution
// Tests .bit_length property for enum type (ADR-058)
// Enums are 32 bits by default (ADR-017)

enum Color { Red, Green, Blue }
enum State { IDLE, RUNNING, STOPPED }

Color globalColor <- Color.Red;

struct TestStruct {
    State state;
}

i32 main() {
    // Test enum bit_length = 32
    if (globalColor.bit_length != 32) {
        return 1;
    }

    // Test local enum
    State localState <- State.IDLE;
    if (localState.bit_length != 32) {
        return 2;
    }

    // Test struct member enum
    TestStruct ts;
    ts.state <- State.RUNNING;
    if (ts.state.bit_length != 32) {
        return 3;
    }

    return 0;
}
