// test-execution
// Comprehensive .length test for bool arrays across all contexts
// Tests: array.length returns 16 (element count), array[0].length returns 8 (element byte width)
bool[16] globalArr;

scope TestScope {
    public u32 getGlobalArrayLength() {
        return global.globalArr.length;
    }
    public u32 getGlobalElementLength() {
        return global.globalArr[0].length;
    }
    bool[16] scopeArr;
    public u32 getScopeArrayLength() {
        return this.scopeArr.length;
    }
    public u32 getScopeElementLength() {
        return this.scopeArr[0].length;
    }
    public bool publicArr[16];
}

u32 checkArrayLength(bool[16] arr) {
    return arr.length;
}

u32 checkElementLength(bool[16] arr) {
    return arr[0].length;
}

struct TestStruct {
    bool[16] arr;
}

i32 main() {
    globalArr[0] <- true;

    if (globalArr.length != 16) {
        return 1;
    }

    if (globalArr[0].length != 8) {
        return 2;
    }

    u32 result <- TestScope.getGlobalArrayLength();
    if (result != 16) {
        return 3;
    }

    result <- TestScope.getGlobalElementLength();
    if (result != 8) {
        return 4;
    }

    result <- TestScope.getScopeArrayLength();
    if (result != 16) {
        return 5;
    }

    result <- TestScope.getScopeElementLength();
    if (result != 8) {
        return 6;
    }

    if (TestScope.publicArr.length != 16) {
        return 7;
    }

    if (TestScope.publicArr[0].length != 8) {
        return 8;
    }

    bool[16] localArr;
    localArr[0] <- true;
    if (localArr.length != 16) {
        return 9;
    }
    if (localArr[0].length != 8) {
        return 10;
    }

    bool[16] testArr;
    testArr[0] <- true;
    result <- checkArrayLength(testArr);
    if (result != 16) {
        return 11;
    }

    result <- checkElementLength(testArr);
    if (result != 8) {
        return 12;
    }

    TestStruct ts;
    ts.arr[0] <- true;
    if (ts.arr.length != 16) {
        return 13;
    }
    if (ts.arr[0].length != 8) {
        return 14;
    }

    return 0;
}
